@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Coupon Index";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Coupon List </h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.minimum_amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.is_active)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.discount)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.minimum_amount)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.is_active)
                        </td>
                        <td>
                            <partial name="_TableButtonsPartial" model="item.id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No coupons exists...</p>
        }
    </div>
</div>